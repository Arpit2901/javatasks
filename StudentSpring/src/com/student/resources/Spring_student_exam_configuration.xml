<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

   	<bean id="stud" class="com.spring.bean.Student">
    <property name="rollno" value="101"></property>
    <property name="name" value="Bhavana"></property>
    <property name="salary" value="10000.0"></property>
</bean>
<bean id="exam" class="com.spring.bean.Exam">
    <property name="Eid" value="51"></property>
    <property name="name" value="Arpit"></property>
    <property name="marks" value="100"></property>
</bean>
    <bean id="stud1" class="com.constructorInjection.bean.StudenNew">
        <property name="rollno" value="105"></property>
        <property name="name" value="SHobhna"></property>
        <property name="salary" value="50000.0"></property>
         <property name="exam" ref="exam2"></property>
    </bean>
     <bean id="exam2" class="com.constructorInjection.bean.ExamNew">
     	<constructor-arg value="51" index="0"></constructor-arg>
        <constructor-arg value="Java" index="1"></constructor-arg>
        <constructor-arg value="100" index="2"></constructor-arg>
    </bean>
</beans>